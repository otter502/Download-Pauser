{
  "manifest_version": 3,
  "name": "download Pauser",
  "description": "Auto Pauses Downloads",
  "version": "1.0",

  "action": {
    "default_icon": {
      "16": "images/download-Pauser-16.png",
      "32": "images/download-Pauser-32.png",
      "48": "images/download-Pauser-48.png",
      "128": "images/download-Pauser-128.png"
    },
    "default_title": "Click icon to toggle"

  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions" : [
    "storage",
    "downloads"
  ]

}